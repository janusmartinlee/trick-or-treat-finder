{
  "branches": [
    "main",
    "master"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "cd application && flutter pub get && flutter build apk --release --split-per-abi && flutter build web --release"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "application/build/app/outputs/flutter-apk/app-armeabi-v7a-release.apk",
            "label": "Android APK (ARM 32-bit)"
          },
          {
            "path": "application/build/app/outputs/flutter-apk/app-arm64-v8a-release.apk",
            "label": "Android APK (ARM 64-bit)"
          },
          {
            "path": "application/build/app/outputs/flutter-apk/app-x86_64-release.apk",
            "label": "Android APK (x86 64-bit)"
          },
          {
            "path": "application/build/web/**",
            "label": "Web Build"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "application/pubspec.yaml"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}